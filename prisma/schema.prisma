generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  ADMIN
}

enum ClaimStatus {
  NEW
  IN_REVIEW
  CLOSED
}

enum ClaimType {
  AUTO
  HOME
  BUSINESS
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(CLIENT)
  insuranceCompany String?   // e.g., "MAPFRE", "ALLIANZ", "AXA"
  claims        Claim[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Claim {
  id              String      @id @default(cuid())
  claimNumber     String      @unique
  type            ClaimType
  status          ClaimStatus @default(NEW)
  
  // Policyholder details
  policyholderName  String
  policyholderId    String    // ID number (DNI/NIF/etc)
  policyholderEmail String
  policyholderPhone String
  
  // Policy details
  policyNumber     String
  coverageType     String
  
  // Incident details
  incidentDate     DateTime
  location         String
  description      String
  damageCategory   String
  
  // Internal notes (admin only)
  internalNotes    String?
  
  // Relations
  user             User       @relation(fields: [userId], references: [id])
  userId           String
  attachments      Attachment[]
  activityLogs     ActivityLog[]
  
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model Attachment {
  id        String   @id @default(cuid())
  fileName  String
  filePath  String
  fileType  String
  claim     Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  claimId   String
  createdAt DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(cuid())
  action    String   // e.g., "CLAIM_CREATED", "STATUS_UPDATED", "NOTE_ADDED"
  details   String?
  claim     Claim    @relation(fields: [claimId], references: [id], onDelete: Cascade)
  claimId   String
  createdAt DateTime @default(now())
}
